  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Enter your phone number..........." %>
  </div>

  <div class="field form-group">
    <%= form.label :address%>
    <%= form.text_field :address, class:"form-control", placeholder:"Enter your address..........." %>
  </div>

  <div class="field form-group">
    <%#= form.label :user_id%>
